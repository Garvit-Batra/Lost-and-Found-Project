<%- include("partials/header") -%> <%- include ("partials/navbar") -%>

<div class="item">
  <% items.forEach(function(element){ %>
  <div class="item-inside">
    <% if (element.title.length > 20) { %>
    <a href="/article/<%=element._id%>"
      ><h2 class="item-title">
        <%= element.title.substring(0,20) + " ..." %>
      </h2></a
    >
    <% }else { %>
    <a href="/article/<%=element._id%>"
      ><h2 class="item-title"><%= element.title%></h2></a
    >
    <% } %>
    <p class="item-date"><%= element.date %> <%= element.time %></p>
    <form class="delete-btn" action="/delete" method="post">
      <button class="btn" type="submit">âœ–</button>
      <input type="hidden" value="<%=element._id%>" name="elementID" />
      <input type="hidden" value="<%=element.type%>" name="elementType" />
    </form>
    <br />
  </div>
  <% }) %>
</div>
